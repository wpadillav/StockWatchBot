{
    "name": "wpadillav/stockwatchbot",
    "description": "ðŸ“ˆ Real-time stock market API with web dashboard and Telegram bot integration",
    "type": "project",
    "license": "MIT",
    "version": "2.1.0",
    "keywords": [
        "stock-market",
        "api",
        "telegram-bot",
        "yahoo-finance",
        "real-time-data",
        "financial-data",
        "dashboard",
        "web-interface",
        "php",
        "bootstrap",
        "cotizaciones",
        "bolsa"
    ],
    "homepage": "https://URL/api/",
    "readme": "README.md",
    "authors": [
        {
            "name": "William Padilla",
            "email": "contact@URL.com",
            "homepage": "https://URL",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/wpadillav/StockWatchBot/issues",
        "source": "https://github.com/wpadillav/StockWatchBot",
        "docs": "https://URL/api/docs.html"
    },
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "StockWatchBot\\": "src/"
        },
        "files": [
            "config.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "StockWatchBot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=8",
        "cs-fix": "php-cs-fixer fix src",
        "cs-check": "phpcs src --standard=PSR12",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ],
        "serve": "php -S localhost:8000 -t .",
        "post-install-cmd": [
            "@composer dump-autoload -o"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "archive": {
        "exclude": [
            "/tests",
            "/docs",
            "/.github",
            "/.gitignore",
            "/phpunit.xml",
            "/phpstan.neon",
            "/.php-cs-fixer.php",
            "/composer.lock",
            "*.log"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.x-dev"
        }
    }
}